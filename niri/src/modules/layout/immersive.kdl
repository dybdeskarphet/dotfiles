layout {
    gaps 0
    background-color "transparent"
    center-focused-column "on-overflow"
    preset-column-widths {
        proportion 0.3
        proportion 0.5
        proportion 0.7
    }

    default-column-width { proportion 0.5; }

    border {
        width 0
    }

    focus-ring {
      off
    }

    struts {
        left 0
        right 0
        top 0
        bottom 0
    }
}
