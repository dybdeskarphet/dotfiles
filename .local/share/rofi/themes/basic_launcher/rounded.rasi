@import "colors.rasi"

* {
    background-color:   transparent;
    margin:     0px;
    padding:    0px;
    spacing:    0px;
    text-color:         @textfg;
}

window {
    border-radius:  12px;
    border:         0px;
    location:       north;
    anchor:         north;
    y-offset:       300px;
    width:          800;
}

mainbox {
    padding: 15px;
}

inputbar {
    children:   [ prompt, entry ];
    margin: 0px 0px 8px 0px;
    border: 2.5px;
}

prompt {
    border-radius: 8px;
    font:   "proportional_font Bold 13";
    vertical-align: 0.5;
    text-color: @fg2;
    background-color:   @semitransparentcolorbg;
    border: 1.0px;
    border-color: @transparentcolorborderfg;
    border-radius:  12px;
    margin: 0px 8px 0px 0px;
    padding: 10px;
}

entry {
    background-color:   @windowbg;
    border: 0px;
    border: 2.5px;
    border-color: @semitransparentcolorbg;
    border-radius:  12px;
    padding: 13px;
}

message {
    background-color:   @windowbg;
    border-color:       @windowbg;
    border-radius:      12px;
    margin: 0 0 12px 0;
    padding: 10px;
}

textbox {
    padding:    8px 24px;
    text-color: @fg2;
    background-color:   @semitransparentcolorbg;
    border: 2.0px;
    border-color: @transparentcolorborderfg;
    border-radius:  12px;
}

listview {
    require-input: true;
    background-color: @windowbg;
    border-radius:  12px;
    border: 2.5px;
    border-color: @transparentcolorborderfg;
    columns:    2;
    fixed-height: false;
    lines:      5;
    padding: 15px;
}

element {
    border-radius: 8px;
    padding:        11px 16px;
    spacing:        8px;
}

element normal active {
    text-color: @fg1;
}

element selected normal, element selected active {
    background-color: @transparentcolorbg;
    text-color: @fg2;
    border: 2px;
    border-color: @transparentcolorborderfg;
}

element-icon {
    size:           1.5em;
    vertical-align: 0.5;
}

element-text {
    text-color: inherit;
    vertical-align: 0.5;
    vertical-align: 0.5;
}
